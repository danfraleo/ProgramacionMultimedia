<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.flowtogether"> <!-- Asegúrate de que el package sea correcto -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlowTogether"
        tools:targetApi="31">

        <!-- MainActivity configurada como la actividad principal -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="true"> <!-- Asegúrate de poner exported="true" en Android 12+ -->

            <!-- Intent Filter para marcarla como la actividad principal -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
